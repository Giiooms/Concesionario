<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Marcas</title>
  <!-- Enlace a Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    h1 {
      margin-top: 20px;
    }
    .table-actions a {
      margin-right: 10px;
    }
    .btn-agregar {
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <h1 class="text-center">Marcas</h1>
    <div class="text-end">
      <a href="/marcas/nuevo" class="btn btn-primary btn-agregar">Agregar Nueva Marca</a>
    </div>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Marca ID</th>
          <th>Marca</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% marcas.forEach(marca => { %>
          <tr>
            <td><%= marca.id_marca %></td>
            <td><%= marca.nombre %></td>
            <td class="table-actions">
              <a href="/marcas/editar/<%= marca.id_marca %>" class="btn btn-warning btn-sm">Editar</a>
              <a href="/marcas/eliminar/<%= marca.id_marca %>" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <!-- Enlace a Bootstrap JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
