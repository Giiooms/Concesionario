<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nueva Venta</title>
  <!-- Enlace a Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    h1 {
      margin-top: 20px;
      text-align: center;
    }
    .form-container {
      max-width: 600px;
      margin: 0 auto;
      background-color: #ffffff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .btn-back {
      margin-top: 10px;
      display: inline-block;
      text-align: center;
      text-decoration: none;
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <h1>Registrar Nueva Venta</h1>
    <div class="form-container">
      <!-- Formulario para registrar una venta -->
      <form action="/ventas/nueva" method="POST">
        
        <!-- Campo para seleccionar el vehículo -->
        <div class="mb-3">
          <label for="id_vehiculo" class="form-label">Vehículo:</label>
          <select name="id_vehiculo" id="id_vehiculo" class="form-select" required>
            <option value="" disabled selected>Seleccione un vehículo</option>
            <% vehiculos.forEach(function(vehiculo) { %>
              <option value="<%= vehiculo.id_vehiculo %>">
                <%= vehiculo.vin %> - <%= vehiculo.marca %> - <%= vehiculo.modelo %>
              </option>
            <% }); %>
          </select>
        </div>

        <!-- Campo para ingresar la fecha de la venta -->
        <div class="mb-3">
          <label for="fecha_venta" class="form-label">Fecha de Venta:</label>
          <input type="date" name="fecha_venta" id="fecha_venta" class="form-control" required>
        </div>

        <!-- Campo para ingresar el precio final -->
        <div class="mb-3">
          <label for="precio_final" class="form-label">Precio Final:</label>
          <input type="number" name="precio_final" id="precio_final" class="form-control" required step="0.01">
        </div>

        <!-- Botón para enviar el formulario -->
        <button type="submit" class="btn btn-primary">Registrar Venta</button>
      </form>

      <!-- Enlace para volver a la lista de ventas -->
      <a href="/ventas" class="btn btn-secondary btn-back mt-3">Volver a Ventas</a>
    </div>
  </div>

  <!-- Enlace a Bootstrap JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
