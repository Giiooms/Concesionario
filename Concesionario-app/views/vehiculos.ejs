<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Vehículos</title>
  <!-- Enlace a Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    h1 {
      margin-top: 20px;
    }
    .btn-nuevo {
      margin-bottom: 20px;
    }
    .table-actions a {
      margin-right: 5px;
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <h1 class="text-center">Lista de Vehículos</h1>
    <div class="text-end">
      <a href="/vehiculos/nuevo" class="btn btn-primary btn-nuevo">Nuevo Vehículo</a>
    </div>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>VIN</th>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Tipo</th>
          <th>Año</th>
          <th>Precio</th>
          <th>Estado</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% vehiculos.forEach(vehiculo => { %>
          <tr>
            <td><%= vehiculo.id_vehiculo %></td>
            <td><%= vehiculo.vin %></td>
            <td><%= vehiculo.marca %></td>
            <td><%= vehiculo.modelo %></td>
            <td><%= vehiculo.tipo %></td>
            <td><%= vehiculo.año %></td>
            <td>$<%= vehiculo.precio.toLocaleString('es-ES') %></td> <!-- Formateo de precio -->
            <td><%= vehiculo.estado %></td>
            <td class="table-actions">
              <a href="/vehiculos/editar/<%= vehiculo.id_vehiculo %>" class="btn btn-warning btn-sm">Editar</a>
              <a href="/vehiculos/eliminar/<%= vehiculo.id_vehiculo %>" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <!-- Enlace a Bootstrap JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
