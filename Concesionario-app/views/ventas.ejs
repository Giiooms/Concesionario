<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ventas</title>
  <!-- Enlace a Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    h1 {
      margin-top: 20px;
    }
    .btn-nueva-venta {
      margin-bottom: 20px;
    }
    .table-actions a {
      margin-right: 10px;
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <h1 class="text-center">Lista de Ventas</h1>
    <div class="text-end">
      <a href="/ventas/nueva" class="btn btn-primary btn-nueva-venta">Registrar Nueva Venta</a>
    </div>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>ID Vehículo</th>
          <th>VIN</th>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Fecha de Venta</th>
          <th>Precio Final</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% ventas.forEach(venta => { %>
          <tr>
            <td><%= venta.id_vehiculo %></td>
            <td><%= venta.vin %></td>
            <td><%= venta.marca %></td>
            <td><%= venta.modelo %></td>
            <td><%= venta.fecha_venta %></td>
            <td>$<%= Number(venta.precio_final).toFixed(2) %></td>
            <td class="table-actions">
              <a href="/ventas/editar/<%= venta.id_vehiculo %>" class="btn btn-warning btn-sm">Editar</a>
              <a href="/ventas/eliminar/<%= venta.id_vehiculo %>" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de eliminar esta venta?')">Eliminar</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <!-- Enlace a Bootstrap JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
